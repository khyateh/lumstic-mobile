<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">@color/orange_text</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Example</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarAppTheme</item>
        <item name="android:listChoiceBackgroundIndicator">
            @drawable/apptheme_list_selector_holo_light
        </item>

        <item name="android:activatedBackgroundIndicator">
            @drawable/apptheme_activated_background_holo_light
        </item>
        <item name="android:textSelectHandleLeft">@drawable/apptheme_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/apptheme_text_select_handle_right
        </item>
        <item name="android:textSelectHandle">@drawable/apptheme_text_select_handle_middle</item>
        <item name="android:textColorHighlight">#99ff301b</item>

        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbarThumbVertical">@drawable/shape_scrollbar_vertical_thumb</item>
        <item name="android:scrollbarSize">3dp</item>

        <item name="android:ratingBarStyle">@style/RatingBarAppTheme</item>
    </style>

    <style name="ProgressBarAppTheme" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/apptheme_progress_horizontal_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/apptheme_progress_indeterminate_horizontal_holo_light
        </item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:icon">@drawable/ic_logo_actionbar</item>
        <item name="android:actionMenuTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>


    <style name="PopupMenu.Example" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/white</item>
    </style>


    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyActionBar.MenuTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/selector_spinner</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>


    <style name="RatingBarAppTheme" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_list_ratingbar</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
        <item name="android:starStyle">?android:attr/ratingBarStyleSmall</item>
    </style>


</resources>
