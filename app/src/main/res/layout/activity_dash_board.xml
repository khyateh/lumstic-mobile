<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dash_board_background"
    tools:context="lumstic.ashoka.com.lumstic.UI.DashBoardActivity">

    <RelativeLayout
        android:id="@+id/dashboardContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:background="@drawable/dashboard_bg_img"></View>

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:background="@color/dash_board_foreground"></View>

        <ImageView
            android:id="@+id/vendor_icon"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/ic_logo_splash" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vendor_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/welcome"
            android:textColor="#212121"
            android:textSize="18sp" />

        <lumstic.ashoka.com.lumstic.Views.RobotoLightTextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="@string/welcome_message_one"
            android:textColor="#6c6c6c"
            android:textSize="16sp" />

        <lumstic.ashoka.com.lumstic.Views.RobotoLightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="@string/welcome_message_two"
            android:textColor="#6c6c6c"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activeSurveyContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <View
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:background="@drawable/dashboard_bg_img"></View>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:background="@color/dash_board_foreground">

            <lumstic.ashoka.com.lumstic.Views.RobotoRegularTextView
                android:id="@+id/active_survey_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Active Surveys"
                android:textColor="#212121"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/upload_container"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/divider"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/selector_custom_button"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/ic_upload" />

                <lumstic.ashoka.com.lumstic.Views.RobotoBlackButton
                    android:id="@+id/upload_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="UPLOAD COMPLETED RESPONSES"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="60dp"
                android:alpha=".4"
                android:background="#999999"></View>

            <ListView
                android:id="@+id/active_survey_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/upload_container"
                android:choiceMode="none"
                android:divider="#c5c5c5"
                android:dividerHeight="1dp"
                android:fadeScrollbars="false"
                android:focusable="true"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingTop="10dp">

                <requestFocus />
            </ListView>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>