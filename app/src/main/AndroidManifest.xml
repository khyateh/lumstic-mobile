<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lumstic.ashoka.com.lumstic">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>

    <application
        android:name="lumstic.ashoka.com.lumstic.Utils.LumsticApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="lumstic.ashoka.com.lumstic.UI.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="lumstic.ashoka.com.lumstic.UI.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_login" />
        <activity
            android:name="lumstic.ashoka.com.lumstic.UI.DashBoardActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_dash_board" />
        <activity
            android:name="lumstic.ashoka.com.lumstic.UI.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_forgot_password" />
        <activity
            android:name="lumstic.ashoka.com.lumstic.UI.SurveyDetailsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_survey_details" />
        <activity
            android:name="lumstic.ashoka.com.lumstic.UI.CompleteResponsesActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_complete_responses" />
        <activity
            android:name="lumstic.ashoka.com.lumstic.UI.ActiveSurveyActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_active_survey" />
        <activity
            android:name="lumstic.ashoka.com.lumstic.UI.IncompleteResponseActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_incomplete_response" />
        <activity
            android:name="lumstic.ashoka.com.lumstic.UI.NewResponseActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_new_response" />
        <activity
            android:name="lumstic.ashoka.com.lumstic.UI.HelpActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_help"></activity>
    </application>

</manifest>
